import java.util.*;

public class Main {
    public static int findHouseNumber(int r, int unit, int[] arr) {
        if (arr == null || arr.length == 0) {
            return -1; // array is null or empty
        }
        
        int totalFoodNeeded = r * unit;
        int currentSum = 0;
        
        for (int i = 0; i < arr.length; i++) {
            currentSum += arr[i];
            if (currentSum >= totalFoodNeeded) {
                return i + 1; // house number is 1-based
            }
        }
        
        return 0; // total food not sufficient
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        int r = sc.nextInt();
        int unit = sc.nextInt();
        int n = sc.nextInt();
        
        int[] arr = new int[n];
        for (int i = 0; i < n; i++) {
            arr[i] = sc.nextInt();
        }
        
        int result = findHouseNumber(r, unit, arr);
        System.out.println(result);
        
        sc.close();
    }
}

